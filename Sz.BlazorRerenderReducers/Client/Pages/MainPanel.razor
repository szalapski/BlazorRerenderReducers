@using Sz.BlazorRerenderReducers
@inherits DisplayHashRerenderComponentBase

<div style="display:flex;" >
    @foreach (int i in Enumerable.Range(0, 1000))
    {
        <div style="display: none;">@i</div>
    }
</div>

<span>
    MainPanel Bar=@InputFoo.Bar
    <NestedPanel InputFoo="@InputFoo" />
</span>
@code {
    [Parameter, EditorRequired] public Foo InputFoo { get; set; } = null!;

    protected override string GetDisplayHash() => InputFoo.Bar;
}
